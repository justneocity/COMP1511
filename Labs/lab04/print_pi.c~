    scanf("%d", &inputNumber);

    int index = 0;
    while (index < inputNumber) {
    
        if (index == 1) {
            printf("."); 
        }
        printf("%d", pi[index]);
        index = index + 1;
        
    
    }
    printf("\n");
     
